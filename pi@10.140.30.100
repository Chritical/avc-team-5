#include <stdio.h>
#include "E101.h"

int main(){
	init();
	return 0;
}

int speed = 64;
int width = 320;
bool horizLine = false;
bool leftLine = true;
bool rightLine = true;

int detection(){
	while(true){
		take_picture();
		int column = 20;
		int row = 120;
		for(int i=0; i<9; i++){
			if(i >= 5){
				if(get_pixel(column, row, 0) != 0){
					rightLine = false;
				}
			}
			if(i <= 5){
				if(get_pixel(column, row, 0) != 0){
					leftLine = false;
				}
			}
			column += 20;
		}
	}
	printf("working");
	if(leftLine == rightLine){
		horizLine = true;
	}
}

void turnRight(){
	set_motor(1, speed);
	set_motor(2, 0);
}

void turnLeft(){
	set_motor(1, 0);
	set_motor(2, speed);
}

void detectLeftTurn(){
	turnLeft();
}

void detectRightTurn(){
	turnRight();
}


